<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditAbsence"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_edit_absence"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:background="#FFFFFF"
    android:id="@+id/unnamed_28">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/unnamed_29"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/save_absence_edit">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/unnamed_30">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/unnamed_31">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="START"
                    android:id="@+id/start_label_absence_edit"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10dp"
                    android:typeface="serif" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/start_date_absence_edit"
                    android:background="@drawable/ic_date_range_black_36dp"
                    android:layout_marginRight="5dp"
                    android:layout_below="@+id/start_label_absence_edit"
                    android:layout_alignEnd="@+id/finish_label_absence_edit"
                    android:layout_alignStart="@+id/end_date_icon_absence_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/start_time_icon_absence_edit"
                    android:background="@drawable/ic_schedule_black_36dp"
                    android:layout_marginRight="5dp"
                    android:layout_below="@+id/start_date_field_absence_edit"
                    android:layout_alignStart="@+id/start_date_absence_edit"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/start_date_field_absence_edit"
                    android:hint="Double tap to select date."
                    android:layout_alignStart="@+id/start_time_field_absence_edit"
                    android:layout_alignEnd="@+id/start_time_field_absence_edit"
                    android:layout_alignBottom="@+id/start_date_absence_edit"
                    android:layout_alignTop="@+id/start_date_absence_edit" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/start_time_field_absence_edit"
                    android:layout_alignEnd="@+id/description_absence_edit"
                    android:hint="Double tap to select time."
                    android:layout_toEndOf="@+id/start_date_absence_edit"
                    android:layout_below="@+id/start_date_field_absence_edit"
                    android:layout_above="@+id/finish_label_absence_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FINISH"
                    android:id="@+id/finish_label_absence_edit"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_below="@+id/start_time_icon_absence_edit"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignStart="@+id/start_label_absence_edit"
                    android:typeface="serif" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/end_date_icon_absence_edit"
                    android:background="@drawable/ic_date_range_black_36dp"
                    android:layout_below="@+id/finish_label_absence_edit"
                    android:layout_alignEnd="@+id/finish_label_absence_edit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/end_time_icon_absence_edit"
                    android:background="@drawable/ic_schedule_black_36dp"
                    android:layout_below="@+id/end_date_field_absence_edit"
                    android:layout_alignEnd="@+id/end_date_icon_absence_edit"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/end_date_field_absence_edit"
                    android:layout_alignEnd="@+id/start_time_field_absence_edit"
                    android:hint="Double tap to select date."
                    android:layout_alignTop="@+id/end_date_icon_absence_edit"
                    android:layout_alignStart="@+id/start_time_field_absence_edit" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/end_time_field_absence_edit"
                    android:layout_alignTop="@+id/end_time_icon_absence_edit"
                    android:layout_alignEnd="@+id/start_time_field_absence_edit"
                    android:hint="Double tap to select time"
                    android:layout_alignStart="@+id/end_date_field_absence_edit" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/description_absence_edit"
                    android:hint="Please write the description here."
                    android:textColorHint="#adadad"
                    android:textColor="#000000"
                    android:gravity="top"
                    android:singleLine="false"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/end_time_field_absence_edit"
                    android:layout_marginTop="30dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/date_absence_edit">

                <DatePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/get_date_absence_edit"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:id="@+id/time_absence_edit"
                android:layout_alignEnd="@+id/unnamed_31"
                android:layout_alignStart="@+id/unnamed_31"
                android:gravity="center">

                <TimePicker
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/get_time_absence_edit"
                    android:layout_below="@+id/get_date_edit" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="bottom"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/long_button"
        android:id="@+id/save_absence_edit">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textColor="#ffffff"
            android:typeface="serif"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/save_absence_label_edit" />
    </RelativeLayout>
</RelativeLayout>