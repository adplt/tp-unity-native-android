<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FollowUp"
    android:background="#FFFFFF"
    android:id="@+id/follow_up">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/unnamed_52"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/response_button">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:id="@+id/unnamed_53">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/name_icon"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_alignStart="@+id/email_label"
                android:layout_alignTop="@+id/unnamed_54"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/email_label"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_alignTop="@+id/unnamed_55"
                android:layout_alignStart="@+id/address_icon"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:typeface="sans"
                android:textSize="15dp"
                android:id="@+id/address_icon"
                android:textColor="#000000"
                android:layout_alignTop="@+id/unnamed_56"
                android:layout_alignStart="@+id/phone_number_label"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:id="@+id/phone_number_label"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_alignTop="@+id/unnamed_57"
                android:layout_alignStart="@+id/work_number_label"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Work Number"
                android:id="@+id/work_number_label"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_alignTop="@+id/unnamed_58"
                android:layout_alignStart="@+id/date_icon"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company"
                android:typeface="sans"
                android:textSize="15dp"
                android:id="@+id/date_icon"
                android:textColor="#000000"
                android:layout_alignTop="@+id/unnamed_59"
                android:layout_toEndOf="@+id/unnamed_59"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alumni"
                android:id="@+id/alumni_label"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_alignTop="@+id/unnamed_60"
                android:layout_toEndOf="@+id/unnamed_54"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Major"
                android:id="@+id/major_label"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_alignTop="@+id/unnamed_61"
                android:layout_alignStart="@+id/alumni_label"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unnamed_54"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_person_black_36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unnamed_55"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_below="@+id/name_icon"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_email_black_36dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:layout_toStartOf="@+id/email_label" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unnamed_56"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_below="@+id/email_label"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_place_black_36dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unnamed_57"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_below="@+id/address_icon"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_phone_iphone_black_36dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:layout_alignEnd="@+id/unnamed_56" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unnamed_58"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_below="@+id/phone_number_label"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_local_phone_black_36dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:layout_alignEnd="@+id/unnamed_59" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unnamed_59"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_below="@+id/work_number_label"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_account_balance_black_36dp"
                android:layout_marginTop="20dp"
                android:layout_toStartOf="@+id/alumni_label"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unnamed_60"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_below="@+id/date_icon"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_school_black_36dp"
                android:layout_marginTop="20dp"
                android:layout_toStartOf="@+id/alumni_label"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unnamed_61"
                android:typeface="sans"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_below="@+id/alumni_label"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_local_library_black_36dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp" />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/input_response_field"
        android:layout_alignParentBottom="true"
        android:id="@+id/response_button"
        android:background="@drawable/long_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Response"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="#ffffff"
            android:typeface="serif"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/response_label" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_label"
        android:layout_alignParentEnd="true"
        android:id="@+id/irl"
        android:layout_alignParentBottom="true">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ro"
            style="@style/spinner_style"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:spinnerMode="dialog"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input_response_field"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/ro"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:hint="Note"
            android:layout_marginBottom="30dp" />

    </RelativeLayout>

</RelativeLayout>
