<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/unnamed_151">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_relative_layout"
        android:id="@+id/unnamed_152">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ev_picture"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/frameLayout">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/ev_picture"
                android:contentDescription=""
                android:src="@drawable/ic_logo_48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/civ_border" />

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pg"
                android:layout_gravity="center" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ev_name"
            android:textSize="20sp"
            android:textColor="#000000"
            android:typeface="normal"
            android:text="Event Name"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignTop="@+id/frameLayout"
            android:layout_toEndOf="@+id/frameLayout"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ev_address"
            android:textSize="15sp"
            android:textColor="#000000"
            android:text="Event Address"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/ev_name"
            android:layout_alignStart="@+id/ev_name"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ev_date"
            android:textSize="15sp"
            android:textColor="#000000"
            android:text="Event Date"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/ev_address"
            android:layout_alignStart="@+id/ev_address"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ev_note"
            android:textSize="15sp"
            android:textColor="#000000"
            android:text="Event Note"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/ev_date"
            android:layout_alignStart="@+id/ev_date"
            android:layout_marginBottom="10dp" />

    </RelativeLayout>

</RelativeLayout>