<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="150dp"
    android:gravity="bottom"
    android:orientation="vertical"
    android:onClick="goToProfile"
    android:id="@+id/unnamed_163">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tp_login_name_label"
        android:layout_alignParentStart="true"
        android:id="@+id/unnamed_164">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profile_background"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary" />

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pg_2"
            android:layout_gravity="center" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignTop="@+id/profile_background"
        android:layout_alignStart="@+id/profile_background"
        android:id="@+id/unnamed_165">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/unnamed_166"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/user_profile_picture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_logo_48dp" />

            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pg_1"
                android:layout_gravity="center" />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/unnamed_166"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/unnamed_166"
            android:layout_marginRight="10dp"
            android:background="@drawable/nav_radius"
            android:id="@+id/unnamed_172">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atria Tya Tobing"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:id="@+id/tp_login_name_label"
                android:textSize="20sp"
                android:typeface="serif"
                android:textColor="#000000"
                android:shadowColor="#cd1010"
                android:singleLine="false"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
