<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/app_bar_event"
    tools:context=".Event"
    android:background="#FFFFFF"
    android:id="@+id/unnamed_39">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/unnamed_40">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:id="@+id/unnamed_41">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_icon"
                android:typeface="sans"
                android:textSize="20sp"
                android:textColor="#000000"
                android:background="@drawable/ic_event_black_36dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="sans"
                android:textSize="20sp"
                android:id="@+id/address_icon"
                android:textColor="#000000"
                android:background="@drawable/ic_place_black_36dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentTop="false"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/name_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="sans"
                android:textSize="20sp"
                android:id="@+id/date_icon"
                android:textColor="#000000"
                android:background="@drawable/ic_date_range_black_36dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/address_icon"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/date_label"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tp_icon"
                android:background="@drawable/ic_people_black_36dp"
                android:layout_below="@+id/date_icon"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/note_icon"
                android:typeface="sans"
                android:textSize="20sp"
                android:textColor="#000000"
                android:background="@drawable/ic_message_black_36dp"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/tp_icon"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/note_label"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/name_icon"
                android:typeface="sans"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/name_icon"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:typeface="sans"
                android:textSize="20sp"
                android:id="@+id/date_label"
                android:textColor="#000000"
                android:layout_alignBottom="@+id/date_icon"
                android:layout_alignStart="@+id/name_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TP Name Who Stand"
                android:id="@+id/address_icon"
                android:typeface="sans"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_below="@+id/date_icon"
                android:layout_toEndOf="@+id/date_icon"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note"
                android:id="@+id/note_label"
                android:typeface="sans"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_alignTop="@+id/note_icon"
                android:layout_alignEnd="@+id/date_label"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:id="@+id/address_icon"
                android:typeface="sans"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_below="@+id/name_icon"
                android:layout_toEndOf="@+id/address_icon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/kumpulan_button"
                android:gravity="center"
                android:layout_alignParentBottom="false"
                android:layout_alignWithParentIfMissing="false"
                android:layout_marginBottom="30dp"
                android:paddingBottom="30dp"
                android:layout_below="@+id/note_label"
                android:layout_marginTop="30dp"
                android:paddingTop="30dp">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:id="@+id/accept_button"
                    android:layout_marginRight="10dp"
                    android:textColor="#ffffff"
                    android:typeface="serif"
                    android:background="@drawable/border_button"
                    android:textSize="15sp"
                    android:gravity="center"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/name_icon"
                    android:layout_alignParentBottom="false" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Decline"
                    android:id="@+id/decline_button"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_cancel"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/accept_button"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentBottom="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:typeface="sans"
                    android:textSize="20sp"
                    android:id="@+id/address_icon"
                    android:textColor="#000000"
                    android:layout_alignStart="@+id/accept_button"
                    android:layout_alignParentTop="true" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
